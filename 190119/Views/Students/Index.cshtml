@model _190119.ViewModels.VwStudents
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.PageTitle</h2>
<div class="row">
    <div class="col-md-9">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Ad Günü</th>
                    <th>Qrup</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stu in Model.Students)
                {
                    <tr>
                        <td>@stu.Name</td>
                        <td>@stu.Surname</td>
                        <td>@stu.Birthday.ToString("dd.MM.yyyy")</td>
                        <td>@stu.Group.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3">
        <ul class="list-group">
            @foreach (var grp in Model.Groups)
            {
                <li class="list-group-item">@grp.Name</li>
            }
        </ul>
    </div>
</div>